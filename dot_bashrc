# All the default Omarchy aliases and functions
# (don't mess with these directly, just overwrite them here!)
source ~/.local/share/omarchy/default/bash/rc

# Add Claude CLI to PATH
export PATH="$HOME/.claude/local:$PATH"

### --- Aliases --- ###

# Git
alias ga='git add'
alias gaa='git add --all'
alias gau='git add -u'
alias gb='git branch'
alias gc='git commit --verbose'
alias gca='git commit -a --verbose'
alias gc!='git commit --amend --verbose'
alias gca!='git commit -a --amend --verbose'
alias gco='git checkout'
alias gcm='git checkout main'
alias gl='git pull'
alias gp='git push'
alias gpf='git push --force'
alias glp='git log --pretty=format:'\''%C(yellow)%h%C(cyan)%x09%an%Creset%x09%C(magenta)%ar%x09%Creset%s'\'' -20'
alias grs='git restore'
alias gst='git status'
alias gd='git diff'
alias grbm='git rebase main'

# chezmoi
alias c='chezmoi'
# Enable completion for chezmoi alias
if command -v chezmoi >/dev/null 2>&1; then
    eval "$(chezmoi completion bash)"
    complete -o default -F __start_chezmoi c
fi

# tmux
alias t='tmux'
alias ta='tmux attach'

# Misc
alias l='ls -lag'
alias grep='rg'
alias kamal='dotenv kamal'
alias tf='terraform'

### --- Keybinds --- ###

bind -x '"\C-f":"~/scripts/find-project"'
bind -x '"\C-g":"tput clear; git status"'
